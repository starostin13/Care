# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Database Configuration
DB_PASSWORD=your_secure_database_password
DATABASE_URL=postgresql://carebot:your_secure_database_password@database:5432/carebot

# Application Security
SECRET_KEY=your-very-secure-secret-key-here

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# Application Settings
FLASK_ENV=production
DEBUG=false

# Logging
LOG_LEVEL=INFO

# External URLs (для продакшена)
DOMAIN=localhost
WEBAPP_URL=http://localhost:5000

# Mobile App Settings
MOBILE_SYNC_ENABLED=true
MISSION_STORAGE_PATH=/app/missions

# Print Station Settings
PRINT_STATION_ENABLED=true

# Map Settings
DEFAULT_MAP_SIZE=20
