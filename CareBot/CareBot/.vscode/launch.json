    "version": "0.2.0",
    "configurations": [
        {
            "name": "ü§ñ Debug Telegram Bot",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/handlers.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "üåê Debug Web Server",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/server_app.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "FLASK_DEBUG": "true"
            },
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false,
        }
    ]
}