{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Install Dependencies",
            "type": "shell",
            "command": "pip",
            "args": ["install", "-r", "requirements.txt"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            },
            "options": {
                "cwd": "${workspaceFolder}/CareBot"
            },
            "problemMatcher": []
        },
        {
            "label": "üß™ Start Test Mode",
            "type": "shell",
            "command": "${workspaceFolder}/scripts/test-mode.ps1",
            "args": ["start"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new",
                "showReuseMessage": false,
                "clear": true
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "‚èπÔ∏è Stop Test Mode",
            "type": "shell", 
            "command": "${workspaceFolder}/scripts/test-mode.ps1",
            "args": ["stop"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            },
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "üìä Test Mode Status",
            "type": "shell",
            "command": "${workspaceFolder}/scripts/test-mode.ps1", 
            "args": ["status"],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            },
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "üöÄ Deploy to Production",
            "type": "shell",
            "command": "${workspaceFolder}/scripts/update-production.ps1",
            "args": ["update"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always", 
                "focus": false,
                "panel": "new",
                "showReuseMessage": false,
                "clear": true
            },
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "üîÑ Sync Migrations Only",
            "type": "shell",
            "command": "${workspaceFolder}/scripts/update-production.ps1",
            "args": ["migrations"],
            "group": "build", 
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            },
            "options": {
                "cwd": "${workspaceFolder}"
            }
        }
    ]
}